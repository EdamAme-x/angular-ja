{
  "name": "angular-ja",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/angular/angular-ja",
  "author": "Suguru Inatomi <suguru.inatomi@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npx zx tools/watch.mjs",
    "build": "npx zx tools/build.mjs",
    "lint": "npm run ~textlint",
    "~textlint": "textlint 'aio-ja/**/!(*.en).md'",
    "test": "npm run lint && npm run test:patch",
    "test:patch": "git apply -v --check --directory origin ./tools/git-patch/*.patch",
    "update-origin": "npx zx tools/update-origin.mjs",
    "enable-yarn": "corepack enable yarn"
  },
  "engines": {
    "node": "^16.18.0"
  },
  "devDependencies": {
    "chokidar": "3.5.3",
    "prh-rules": "prh/rules",
    "textlint": "^12.2.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-prh": "^5.3.0",
    "zx": "7.1.1"
  }
}
